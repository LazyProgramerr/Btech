<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="@dimen/_500sdp"
    android:id="@+id/chatBubbleHolder">
    <RelativeLayout
        android:id="@+id/leftLayout"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/_2sdp"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:backgroundTint="@color/transparentOrange"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <include
                android:id="@+id/leftProfile"
                layout="@layout/layout_profile_pic"
                android:layout_height="@dimen/_20sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_margin="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/msgLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:textColor="@color/black"
                android:autoLink="all"
                android:longClickable="true"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_5sdp"
                android:linksClickable="true"
                android:text="@string/app_name"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rightLayout"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/_2sdp"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:backgroundTint="@color/transparentOrange"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            tools:ignore="UselessParent">
            <include
                android:id="@+id/rightProfile"
                layout="@layout/layout_profile_pic"
                android:layout_height="@dimen/_20sdp"
                android:layout_width="@dimen/_20sdp"
                android:layout_margin="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/msgRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30sdp"
                android:longClickable="true"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:autoLink="all"
                android:paddingVertical="@dimen/_3sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:linksClickable="true"
                android:text="@string/app_name"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>